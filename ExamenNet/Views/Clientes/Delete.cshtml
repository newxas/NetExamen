@model ExamenNet.Models.Clientes

@{
    ViewData["Title"] = "Delete";
}

<h3>Estas seguro que quieres eliminar el registro?</h3>
<div>
    <h4>Clientes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descuento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descuento)
        </dd>
        <dt class = "col-sm-2">
            <label>Asesor De Venta</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuarios.NombreUsuario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_Cliente" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Regresar</a>
    </form>
</div>
