@model IEnumerable<ExamenNet.Models.Clientes>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descuento)
            </th>
            <th>
                <label>Asesor De Venta</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descuento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuarios.NombreUsuario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Cliente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Cliente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Cliente">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
