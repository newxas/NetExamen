@model IEnumerable<ExamenNet.Models.Clientes>

@{
    ViewData["Title"] = "Index";
}

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<div class="container p-5">
    <a class="btn btn-danger" asp-action="Menu">Regresar</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreCliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoCliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descuento)
                </th>
                <th>
                    <label>Asesor De Venta</label>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descuento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuarios.NombreUsuario)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ID_Cliente">Edit</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID_Cliente">Details</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID_Cliente">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

