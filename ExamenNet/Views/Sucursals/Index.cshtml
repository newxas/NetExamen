@model IEnumerable<ExamenNet.Models.Sucursal>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-5">
    <a class="btn btn-danger" asp-action="Menu">Regresar</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreSucursal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreSucursal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.ID_Sucursal">Edit</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ID_Sucursal">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID_Sucursal">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>