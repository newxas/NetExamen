@model ExamenNet.Models.Usuarios

@{
    ViewData["Title"] = "Create";
}

<div class="container p-5">

    <form asp-action="Create">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input asp-for="NombreUsuario" class="form-control" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input asp-for="PasswordUsuario" class="form-control" />
                    <span asp-validation-for="PasswordUsuario" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Rol" class="control-label"></label>
                    <select asp-for="Rol" class="form-control">
                        <option value="Asesor de Venta">Asesor de Venta</option>
                        <option value="Facturista">Facturista</option>
                        <option value="Gerente">Gerente</option>
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Sucursal</label>
                    <select asp-for="ID_Sucursal" class="form-control" asp-items="ViewBag.ID_Sucursal"></select>
                </div>               
            </div>
            <div class="col-12">
                <div class="form-group p-4 text-center">
                    <input type="submit" value="Crear" class="btn btn-primary btn-sm" />
                    <a class="btn btn-danger btn-sm" asp-action="Menu">Regresar</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
