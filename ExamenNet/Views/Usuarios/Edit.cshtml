@model ExamenNet.Models.Usuarios

@{
    ViewData["Title"] = "Edit";
}


<div class="container text-center p-5">
    <form asp-action="Edit">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID_Usuarios" />
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="NombreUsuario" class="control-label "></label>
                    <input asp-for="NombreUsuario" class="form-control" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>          
                <div class="form-group">
                    <label asp-for="PasswordUsuario" class="control-label"></label>
                    <input asp-for="PasswordUsuario" class="form-control" />
                    <span asp-validation-for="PasswordUsuario" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Rol" class="control-label"></label>
                    <select asp-for="Rol" class="form-select">
                        <option value="Asesor de Venta">Asesor de Venta</option>
                        <option value="Facturista">Facturista</option>
                        <option value="Gerente">Gerente</option>
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ID_Sucursal" class="control-label"></label>
                    <select asp-for="ID_Sucursal" class="form-control" asp-items="ViewBag.ID_Sucursal"></select>
                    <span asp-validation-for="ID_Sucursal" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group p-4">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Regresar</a>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
