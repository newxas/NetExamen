@model ExamenNet.Models.Usuarios

@{
    ViewData["Title"] = "Delete";
}

<div class="container text-center">
    <h3>Estas seguro que deseas eliminar este registro ?</h3>
    <h4>Usuarios</h4>
    <hr />
    <dl class="row">
        <div class="col-12">
            <dt class="col-sm-12">
                @Html.DisplayNameFor(model => model.NombreUsuario)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.NombreUsuario)
            </dd>
        </div>
        <div class="col-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PasswordUsuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PasswordUsuario)
            </dd>
        </div>
        <div class="col-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rol)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rol)
            </dd>
        </div>
        <div class="col-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sucursal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sucursal.NombreSucursal)
            </dd>
        </div>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_Usuarios" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Regresar</a>
    </form>
</div>
