@model IEnumerable<ExamenNet.Models.Usuarios>

@{
    ViewData["Title"] = "Index";
}

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<div class="container p-5">
    <a class="btn btn-danger" asp-action="Menu">Regresar</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreUsuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sucursal.NombreSucursal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sucursal.NombreSucursal)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ID_Usuarios">Edit</a> |
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ID_Usuarios">Details</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID_Usuarios">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
