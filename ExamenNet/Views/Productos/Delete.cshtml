@model ExamenNet.Models.Productos

@{
    ViewData["Title"] = "Delete";
}

<h3>Estas seguro que quieres eliminar el registro?</h3>
<div>
    <h4>Productos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.NombreProducto) *@
            <label>Nombre de Producto</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreProducto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Impuesto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Impuesto)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Sucursal) *@
            <label>Sucursal: </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sucursal.NombreSucursal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_Producto" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Regresar</a>
    </form>
</div>
