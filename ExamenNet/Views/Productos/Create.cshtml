@model ExamenNet.Models.Productos

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <h4>Productos</h4>
    <hr />
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreProducto" class="control-label"></label>
                <input asp-for="NombreProducto" class="form-control" />
                <span asp-validation-for="NombreProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Impuesto" class="control-label"></label>
                <input asp-for="Impuesto" class="form-control" />
                <span asp-validation-for="Impuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_Sucursal" class="control-label"></label>
                <select asp-for="ID_Sucursal" class ="form-control" asp-items="ViewBag.ID_Sucursal"></select>
            </div>
            <div class="form-group p-5">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Menu">Regresar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
