@model ExamenNet.Models.Promociones

@{
    ViewData["Title"] = "Delete";
}

<h3>Estas seguro que quieres eliminar el registro?</h3>
<div>
    <h4>Promociones</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           @*  @Html.DisplayNameFor(model => model.NombrePromocion) *@
           <label>Nombre de Promoción</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombrePromocion)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.TotalPromocion) *@
            <label>Total</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPromocion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_Promocion" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Regresar</a>
    </form>
</div>
